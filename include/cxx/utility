#ifndef CAPRESE_LIBC_CXX_UTILITY_
#define CAPRESE_LIBC_CXX_UTILITY_

#include <internal/cxx/type_traits/logic.h>
#include <internal/cxx/utility/declval.h>
#include <internal/cxx/utility/fwd.h>
#include <internal/cxx/utility/unreachable.h>

namespace std {
  template<typename T>
  auto declval() noexcept -> decltype(__declval<T>());

  template<typename T>
  __constexpr_cxx_std_20 void swap(T& a, T& b) noexcept {
    T tmp = move(a);
    a     = move(b);
    b     = move(tmp);
  }

  template<typename T, __size_t N>
  __constexpr_cxx_std_20 void swap(T (&a)[N], T (&b)[N]) noexcept {
    for (__size_t i = 0; i < N; ++i) {
      swap(a[i], b[i]);
    }
  }
} // namespace std

#endif // CAPRESE_LIBC_CXX_UTILITY_
